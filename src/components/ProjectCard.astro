---
interface Props {
  title: string;
  description: string;
  image: string;
  tags: string[];
  demoUrl?: string;
  githubUrl?: string;
  featured?: boolean;
}

const { 
  title, 
  description, 
  image, 
  tags, 
  demoUrl, 
  githubUrl, 
  featured = false 
} = Astro.props;
---

<div class={`project-card ${featured ? 'featured' : ''} animate-on-scroll`}>
  <div class="aspect-video overflow-hidden">
    <img 
      src={image} 
      alt={title}
      class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
      loading="lazy"
    />
  </div>
  
  <div class="p-6">
    <h3 class="text-xl font-bold text-white mb-2 geometric-accent">
      {title}
    </h3>
    
    <p class="text-gray-300 mb-4 text-sm leading-relaxed">
      {description}
    </p>
    
    <div class="flex flex-wrap gap-2 mb-4">
      {tags.map(tag => (
        <span class="px-3 py-1 bg-dark-700 text-orange-400 text-xs font-medium rounded-full">
          {tag}
        </span>
      ))}
    </div>
    
    <div class="flex gap-3">
      {demoUrl && (
        <a 
          href={demoUrl} 
          target="_blank" 
          rel="noopener noreferrer"
          class="btn-primary text-sm px-4 py-2"
        >
          View Live
        </a>
      )}
      {githubUrl && (
        <a 
          href={githubUrl} 
          target="_blank" 
          rel="noopener noreferrer"
          class="btn-outline text-sm px-4 py-2"
        >
          View Code
        </a>
      )}
    </div>
  </div>
</div>