						<path d="M6 16H2"/>
						<path d="M62 16h-4"/>
					</g>
				</svg>

				<!-- Music note -->
				<svg class="icon icon-music" viewBox="0 0 32 32" style="--x: 78%; --y: 18%; --delay: 200ms; --scale: 1.0;">
					<g fill="none" stroke="rgba(249,115,22,0.55)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
						<path d="M12 6v16"/>
						<path d="M12 6l12-2v12"/>
						<circle cx="10" cy="24" r="4"/>
						<circle cx="22" cy="20" r="4"/>
					</g>
				</svg>

				<!-- Art palette -->
				<svg class="icon icon-palette" viewBox="0 0 36 36" style="--x: 12%; --y: 70%; --delay: 400ms; --scale: 1.05;">
					<g fill="none" stroke="rgba(255,255,255,0.32)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
