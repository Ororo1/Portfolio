					<linearGradient id="connectGradient" gradientUnits="userSpaceOnUse" x1="0" y1="0" x2="100" y2="0">
						<!-- Lighter at PRINCE (start) -->
						<stop offset="0%" stop-color="#f97316" />
						<!-- Darker at OKEKE (end) -->
						<stop offset="100%" stop-color="#ea580c" />
					</linearGradient>
				</defs>
				<path id="line-path" stroke="url(#connectGradient)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" fill="none" opacity="0"></path>
			</svg>

			<!-- Subtle decorative hero icons -->
			<div class="hero-icons" aria-hidden="true">
				<!-- Glasses -->
				<svg class="icon icon-glasses" viewBox="0 0 64 32" style="--x: 18%; --y: 24%; --delay: 0ms; --scale: 0.9;">
