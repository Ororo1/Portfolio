---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
---

<Layout title="Prince Okeke - Full Stack Developer & UI/UX Designer">
	<Navigation />
	
	<main>
		<!-- Hero Section with Geometric Design -->
		<section class="min-h-screen flex items-center justify-center relative overflow-hidden px-6 pt-20">
			<div class="text-center z-10 max-w-4xl mx-auto">
				<!-- Main Title with geometric styling -->
				<div class="relative mb-8">
					<h1 class="hero-text mb-4 fade-in-up">
						PRINCE<br>
						<span class="accent-text">OKEKE</span>
					</h1>
					
					<!-- Geometric line element -->
					<div class="w-32 h-1 bg-orange-500 mx-auto mb-6 rounded-full"></div>
				</div>
				
				<!-- Subtitle with staggered animation -->
				<div class="space-y-2 mb-12">
					<p class="text-xl md:text-2xl text-gray-300 fade-in-up" style="animation-delay: 0.2s;">Full Stack Developer</p>
					<p class="text-xl md:text-2xl text-gray-300 fade-in-up" style="animation-delay: 0.4s;">UI/UX Designer</p>
					<p class="text-xl md:text-2xl accent-text font-bold fade-in-up" style="animation-delay: 0.6s;">Freelancer</p>
				</div>
				
				<!-- CTA Buttons -->
				<div class="flex flex-col sm:flex-row gap-4 justify-center fade-in-up" style="animation-delay: 0.8s;">
					<a href="#work" class="btn-primary">VIEW MY WORK</a>
					<a href="#contact" class="btn-outline">GET IN TOUCH</a>
				</div>
			</div>
		</section>

		<!-- Featured Work Section -->
		<section id="work" class="py-20 px-6 relative">
			<div class="max-w-6xl mx-auto">
				<div class="text-center mb-16">
					<h2 class="text-4xl md:text-5xl font-black text-white mb-6 fade-in-up">
						FEATURED <span class="accent-text">WORK</span>
					</h2>
					<p class="text-gray-400 max-w-2xl mx-auto text-lg fade-in-up" style="animation-delay: 0.2s;">
						Interactive demos and case studies of my most recent projects
					</p>
				</div>

				<!-- Projects Grid -->
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 fade-in-up" style="animation-delay: 0.4s;">
					<!-- ORCA Project -->
					<div class="bg-gray-800 rounded-lg overflow-hidden hover:transform hover:scale-105 transition-all duration-300">
						<div class="aspect-video bg-gradient-to-br from-orange-500 to-orange-700 flex items-center justify-center">
							<h3 class="text-2xl font-bold text-white">ORCA</h3>
						</div>
						<div class="p-6">
							<h4 class="text-xl font-bold text-white mb-2">Music Web App</h4>
							<p class="text-gray-400 mb-4">Platform for upcoming artists to connect and showcase their music journey</p>
							<div class="flex gap-2">
								<span class="px-3 py-1 bg-orange-500/20 text-orange-400 rounded-full text-sm">UI/UX</span>
								<span class="px-3 py-1 bg-orange-500/20 text-orange-400 rounded-full text-sm">Design</span>
							</div>
						</div>
					</div>

					<!-- MARP Project -->
					<div class="bg-gray-800 rounded-lg overflow-hidden hover:transform hover:scale-105 transition-all duration-300">
						<div class="aspect-video bg-gradient-to-br from-blue-500 to-purple-700 flex items-center justify-center">
							<h3 class="text-2xl font-bold text-white">MARP</h3>
						</div>
						<div class="p-6">
							<h4 class="text-xl font-bold text-white mb-2">E-Commerce Platform</h4>
							<p class="text-gray-400 mb-4">Trustworthy connection between business owners and customers</p>
							<div class="flex gap-2">
								<span class="px-3 py-1 bg-orange-500/20 text-orange-400 rounded-full text-sm">Full Stack</span>
								<span class="px-3 py-1 bg-orange-500/20 text-orange-400 rounded-full text-sm">Flask</span>
							</div>
						</div>
					</div>

					<!-- Nike Project -->
					<div class="bg-gray-800 rounded-lg overflow-hidden hover:transform hover:scale-105 transition-all duration-300">
						<div class="aspect-video bg-gradient-to-br from-green-500 to-teal-700 flex items-center justify-center">
							<h3 class="text-2xl font-bold text-white">NIKE</h3>
						</div>
						<div class="p-6">
							<h4 class="text-xl font-bold text-white mb-2">Landing Page</h4>
							<p class="text-gray-400 mb-4">Design concept for Nike Store's modern landing page</p>
							<div class="flex gap-2">
								<span class="px-3 py-1 bg-orange-500/20 text-orange-400 rounded-full text-sm">HTML5</span>
								<span class="px-3 py-1 bg-orange-500/20 text-orange-400 rounded-full text-sm">CSS3</span>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- About Section -->
		<section id="about" class="py-20 px-6 bg-gray-900">
			<div class="max-w-4xl mx-auto text-center">
				<h2 class="text-4xl md:text-5xl font-black text-white mb-8 fade-in-up">
					ABOUT <span class="accent-text">ME</span>
				</h2>
				<p class="text-xl text-gray-300 leading-relaxed fade-in-up" style="animation-delay: 0.2s;">
					I provide a range of services, from document formatting to full-stack web development. 
					Proficient in HTML5, CSS3, JavaScript, Bulma, and Python with strong UI design experience 
					using Framer and Figma. Equally proficient with PowerPoint and Excel, I create impactful 
					presentations and insights.
				</p>
			</div>
		</section>

		<!-- Contact Section -->
		<section id="contact" class="py-20 px-6">
			<div class="max-w-4xl mx-auto text-center">
				<h2 class="text-4xl md:text-5xl font-black text-white mb-8 fade-in-up">
					GET IN <span class="accent-text">TOUCH</span>
				</h2>
				<p class="text-xl text-gray-300 mb-12 fade-in-up" style="animation-delay: 0.2s;">
					Ready to work together? Let's create something amazing.
				</p>
				<div class="flex flex-col sm:flex-row gap-4 justify-center fade-in-up" style="animation-delay: 0.4s;">
					<a href="mailto:prince.okekepc@gmail.com" class="btn-primary">SEND EMAIL</a>
					<a href="https://wa.me/2349012303810" class="btn-outline">WHATSAPP</a>
				</div>
			</div>
		</section>
	</main>
</Layout>